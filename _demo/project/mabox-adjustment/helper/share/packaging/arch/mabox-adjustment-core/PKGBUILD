pkgname=mabox-adjustment-core
pkgver=0.1
pkgrel=1
pkgdesc="Mabox Adjustment / Core"
url="https://github.com/samwhelp/mabox-adjustment/tree/main/project/mabox-adjustment"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

